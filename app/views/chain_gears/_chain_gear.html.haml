- unless chain_gear.gear.nil?
  .chain_link
    .first.col.w25
      .first.col.w10.action
        = link_to '<span>Buy This Gear</span>', '#'
        %span.score= chain_gear.gear.score
      .col.w10.image
        = image_tag(chain_gear.gear.image.url(:thumb))
    .gear.col{:class => chain_gear.gear_type.downcase}
      %h4
        =h chain_gear.gear.make
        =h chain_gear.gear.model
        %em (#{h chain_gear.gear.manufactured_date})

      .info
        .col.w25
          = render(:partial => chain_gear.gear.partial, :object => chain_gear.gear)
        .notes.first
          =# textilize chain_gear.notes
      .meta.first.col.w25
    .clear
- else
  .chain_link
    .gear.first.col.line_in
      %h4 Line In
.clear