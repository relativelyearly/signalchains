%li.chain_gear{:id => "chain_gear_#{chain_gear.id}", :class => chain_gear.gear_type}
  .chain_link{:class => chain_gear.preamp? ? 'top' : 'sortable'}
    .first.col.community
      .thumb
        = link_to image_tag(chain_gear.gear.image.url(:thumb), :alt => chain_gear.gear.model), chain_gear.gear.image.url
      = link_to '<span>View</span>', chain_gear.gear, :class => 'btn'
      / %span.score= chain_gear.gear.score
    .gear.col{:class => chain_gear.gear_type.downcase}
      .banner
        - if chain_gear.chain.user == current_user
          .admin
            = link_to('edit notes', edit_chain_gear_path(chain_gear), :class => 'show-form edit', :title => 'edit notes')
            = link_to('delete gear', chain_gear, :method => :delete, :class => 'delete', :title => 'delete gear')      
        %h4
          =h chain_gear.gear.make
          =h chain_gear.gear.model
      .info
        %h5
          = render(:partial => chain_gear.gear.chain_gear_partial, :object => chain_gear.gear)
        .notes.first
          %div{:id => "chain_gear_#{chain_gear.id}_notes"}= textilize chain_gear.notes
          - if chain_gear.chain.user == current_user
            .notes-form{:id => "notes-form-#{chain_gear.id}", :style => 'display:none;'}
              - semantic_remote_form_for chain_gear, :update => "chain_gear_#{chain_gear.id}_notes" do |f|
                = f.input :notes
                = f.commit_button 'Save'
      .meta.first.col.w25
    .clear
.clear