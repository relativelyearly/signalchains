- semantic_form_for @mic, :html => {:multipart => true} do |f|
  = render(:partial => 'gear/form', :locals => {:f => f})
  .col.w25
    = f.input :mic_type, :as => :select, :collection => Mic.types, :label => 'Type'
    = f.input :diaphragm_size, :as => :select, :collection => Mic.diaphragm_sizes
    = f.input :pattern, :as => :select, :collection => Mic.patterns
    - if @chain
      = hidden_field_tag :chain_id, @chain.id
  .clear
  = f.buttons