- title(@class.to_s.underscore.humanize)
#search
  %h3 Find the gear you're looking for
  = render(:partial => "#{@class.to_s.pluralize.underscore}/search_form")

%br.clear

#gear= render(:partial => 'gear/index_gear', :collection => collection)

.bucket#new_gear
  %h3 Or add something new
  .w20
    = new_button(@class)


:javascript
  $(function () {
    $('input').keyup(search);
    $('select').change(search);
  });

  function search() {
    $('#search_form').ajaxSubmit({ target: '#gear' });
  }