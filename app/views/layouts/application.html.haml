!!!
%html
  %head
    = javascript_include_tag('jquery', 'jquery-ui.custom.min', 'plugins/jquery.validate', 'jrails', 'plugins/jquery.form', 'plugins/jquery.scrollTo', 'plugins/jquery.localscroll', 'plugins/jquery.jplayer', '/fancybox/fancybox', 'application.js')
    = stylesheet_link_tag('application', 'style', 'chains', 'events', 'user', 'custom-theme/custom', 'audioplayer', '/fancybox/fancybox')
    %title= yield(:title) || "Signal Chains"
  %body

    #master.wrapper
      #left-content
        #header
          = link_to 'Signal Chains', root_url, :id => 'logo'
          = render :partial => "layouts/nav"
        .clear
        = render_flash_messages
        #content.container
          = yield
        .first
      #right-content
        #sidebar
          #controls
            - authenticated_only do
              .session
                = link_to current_user.login, edit_account_path, :id => 'edit_profile'
                = link_to 'Log Out', logout_url
            - anonymous_only do
              .session
                = link_to 'Login', login_path, :id => 'edit_profile'
            %form
              %input{:size => '16'}
              %input{:type => 'submit', :value => 'search'}
          %h4 Featured Gear
          %h4 Featured Studio
        .clear
      .clear
    .footer.wrapper.redev.white
      .stats
        539 pieces of gear, 1,256 chains, 2,003 users
      .content
        .col.w15
          %h3 Find
          %ul
            %li= link_to "Chains", chains_path
            %li= link_to "Gear", gear_path
            %li= link_to "Studios", gear_path
            %li= link_to "Engineers", gear_path
        .col.w15
          %h3 About
          %ul
            %li= link_to "What is Signal Chains?", "#"
            %li= link_to "Blog", "#"
            %li= link_to "Terms of Service", "#"
            %li= link_to "Privacy Policy", "#"
        .col.w35
          %h3 Contact
          %ul
            %li= link_to "Support/Feedback", "#"
            %li= link_to "Twitter", "http://twitter.com/signalchains"
        .col.w20#mark
          = image_tag '../images/red_logo_white.png', :alt => 'Relatively Early Development'
          = link_to 'A Relatively Early Development', 'http://relativelyearly.com'
          %br
          %br
          %p &copy; 2010 Relatively Early Development
        .first