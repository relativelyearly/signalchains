- semantic_form_for @search, :url => {:controller => :effects_processors, :action => :search}, :html => {:id => 'search_form'} do |f|
  .col.first.w35
    = f.input :make_like, :input_html => { :size => 27 }, :input_html => { :size => 20}, :wrapper_html => {:class => 'first col w15'}, :label => 'Make', :required => false
    = f.input :model_like, :input_html => { :size => 27 }, :input_html => { :size => 20}, :wrapper_html => {:class => 'col w15'}, :label => 'Model', :required => false
  .col.w25
    = f.input :effects_type, :as => :select, :collection => EffectsProcessor.effects_types, :label => 'Type', :wrapper_html => {:class => 'col w10'}, :required => false
    = f.input :interface, :as => :select, :collection => EffectsProcessor.interfaces, :wrapper_html => {:class => 'col w10'}, :required => false

  - if @chain
    = hidden_field_tag :chain_id, @chain.id
.clear