.comment.first
  .first.col.comment-text
    =textilize(comment.body)
    - if comment.user == current_user || current_user.admin?
      = link_to 'Edit', eval("edit_#{comment.commentable_type.underscore}_comment_path(comment.commentable, comment)")
      = link_to 'Delete', [comment.commentable, comment], :method => :delete
  .col.w20
    .avatar
      = link_to image_tag(comment.user.avatar.url(:thumb)), user_by_login_path(comment.user.login)

    - if comment.user
      .username
        = link_to comment.user.display_name, user_by_login_path(comment.user.login)
  .clear      
  
